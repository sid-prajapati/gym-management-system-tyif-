<div class="main-body">
    <div class="create-form-section">
        <h2>To Add Instructor</h2>
        <hr>
        <h3 class="label">NAME:</h3>
        <form action="/instructor/add" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" name="name" id="" placeholder="Name" class="form-control">
            </div>
            <div class="form-group">
                <h3 class="label">PICTURE:</h3>
                <input type="file" name="picture" class="form-control" placeholder="File" id="">
            </div>
            <div class="form-group">
                <h3 class="label">SPECIALITY:</h3>
                <input type="text" name="speciality" placeholder="Speciality" id="" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn-primary" id=" addinstructor">Create</button>
            </div>
        </form>
    </div>
    <div class="update-form-section">
        <form  id="update_instructor_form">
            <div class="form-group">
                <h2>To Update Instructor</h2>
        <hr>
                <h3 class="label">ID:</h3>
                <input type="text" name="id" class="form-control" id="updateIid" readonly placeholder="id">
            </div>
            <div class="form-group">
                <h3 class="label">NAME:</h3>
                <input type="text" name="name" class="form-control" placeholder="Name" id="updateIname">
            </div>
            <div class="form-group">
                <h3 class="label">SPECIALITY:</h3>
                <input type="text" name="speciality" placeholder="Speciality" id="updateIspeciality" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn-primary" id="instructupdate">Update</button>
            </div>
        </form>
    </div>
</div>
<div class="table-section">
    <table id="instructor-table">
        <h2 id="table-title">Instructors</h2>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Speciality</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each instructors}}
             <tr>
                 <td>{{this.id}}</td>
                 <td>{{this.name}}</td>
                 <td><img src="{{this.picture}}" alt=""></td>
                 <td>{{this.speciality}}</td>
                 <td><button class="btn-alert" onclick="instructoredit({{this.id}})">Edit</button></td>
                 <td><button class="btn-danger" onclick="instructordel({{this.id}})">Delete</button></td>
             </tr>
            {{/each}}
        </tbody>
    </table>
</div>