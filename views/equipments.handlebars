<div class="main-body">
    <div id="create-form-section">
        <form action="/equipments/add" method="POST">
            <h2>To Add Equipments</h2>
            <hr>
            <div class="form-group">
                <h3 class="label">EQUIPMENT NAME:</h3>
                <input type="text" placeholder="Equipment Name"  name="name" class="form-control" id="name">
            </div>
            <div class="form-group">
                <button type="submit" class="btn-primary">Create</button>
            </div>
        </form>
    </div>
    <div id="update-form-section">
        <form  id="update_form">
            <div class="form-group">
                <h2> To Update Equpiments</h2>
                <hr>
                <h3 class="label">ID:</h3>
                <input type="text" name="id"  id="Eid" placeholder="id" class="form-control" readonly>
            </div>
        <div class="form-group">
            <h3 class="label">NAME:</h3>
 <input type="text" name="name"  id="updateEname" placeholder="Name" class="form-control">
        </div>
            <div class="form-group">
                <button type="submit" class="btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
<div class="table-section">
    <table id="equipments-table">
        <h2 id="table-title">Equipments</h2>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each equipments}}
                <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td><button class="btn-alert" onclick=" eqiedit({{this.id}})">Edit</button></td>
                <td><button class="btn-danger" onclick="eqidel({{this.id}})">Delete</button></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script src="/js/equipments.js"></script>